	"type": "module",
	"author": {
		"name": "renbkna",
		"url": "https://github.com/renbkna"
	},
	"scripts": {
		"dev": "concurrently --ks SIGKILL -n \"Client,Server\" \"npm run dev:client\" \"npm run dev:server\"",
		"dev:server": "tsx server/server.ts",
		"dev:client": "vite",
		"build": "vite build",
		"lint": "biome check .",
		"format": "biome format . --write",
		"preview": "vite preview",
		"start": "tsx server/server.ts",
		"postinstall": "npx puppeteer browsers install chrome && node -e \"const fs=require('fs'),path=require('path');const dir=path.join('.cache','puppeteer');if(!fs.existsSync(dir))fs.mkdirSync(dir,{recursive:true});\"",
		"postinstall:prod": "mkdir -p .cache/puppeteer",
		"test": "node --test"
	},
	"dependencies": {
		"@types/compression": "^1.8.1",
		"axios": "^1.13.2",
		"better-sqlite3": "^12.4.1",
		"cheerio": "^1.0.0",
		"compression": "^1.8.1",
		"concurrently": "^9.2.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-rate-limit": "^8.2.1",
		"helmet": "^8.1.0",
		"ipaddr.js": "^2.2.0",
		"languagedetect": "^2.0.0",
		"lucide-react": "^0.559.0",
		"puppeteer": "^24.30.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-virtuoso": "^4.17.0",
		"robots-parser": "^3.0.1",
		"sanitize-html": "^2.17.0",
		"sentiment": "^5.0.2",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"tsx": "^4.20.6",
		"winston": "^3.18.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@tailwindcss/vite": "^4.1.17",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.5",
		"@types/node": "^25.0.0",
		"@types/react": "^19.2.6",
		"@types/react-dom": "^19.2.3",
		"@types/sanitize-html": "^2.16.0",
		"@vitejs/plugin-react": "^5.1.1",
		"tailwindcss": "^4.1.17",
